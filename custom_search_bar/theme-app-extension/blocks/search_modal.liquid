<div class="searchmodal">
  <div class="inblock">
    {% render "textinput1"%}
  </div>
  <div class="inblock">
      <div class="searcher">{% render "searchbox" %}</div>
  </div>
</div>


{%style%}
  .inblock{
    display: inline-block;
  }
  .searchmodal{
    background-color: {{block.settings.color2}};
    background: linear-gradient({{block.settings.gradientangle}}deg, {{block.settings.color2}} 0%, {{block.settings.color3}} {{block.settings.gradientpercent}}%, {{block.settings.color4}} 100%);
    display: flex;
    align-items: center;
    border-radius: {{block.settings.radiuscurve}}rem;
    box-shadow: {{block.settings.offsetx}}rem {{block.settings.offsety}}rem {{block.settings.blur}}rem {{block.settings.spread}}rem rgba(0, 0, 0, 0.2);
  }
{%endstyle%}

