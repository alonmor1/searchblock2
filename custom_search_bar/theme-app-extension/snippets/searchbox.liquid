<div class="searchwrapper">
  <form class="customsearch" action="{{ routes.search_url }}">
      <input type="text"
        placeholder="Search"
        name="q"
        value="{{ search.terms | escape }}"
    >
    </form>
  </div>

{%style%}
  .searchwrapper{
  }
  .customsearch {
    padding-bottom: {{block.settings.paddingbottom}}rem;
    padding-right: {{block.settings.paddingright}}rem;
    padding-top: {{block.settings.paddingtop}}rem;
    caret: initial;
  }
  input[type=text]{
    border-top: none;
    border-left: none;
    border-right: none;
    border-color: {{block.settings.bordercolor}};
    outline: none;
    box-shadow: none;
    font-family: {{block.settings.font}};
    font-size: {{block.settings.fontsize}}rem;
    color: {{block.settings.searchcolor}};
    width: {{block.settings.searchwidth}}%;
    background: rgba(0,0,0,0.{{block.settings.searchopacity}});
    padding-left: 1rem;
  }
  input[type=text]::after{
    width: 0.125em;
    color: {{block.settings.searchcolor}};
  }
  ::placeholder {
    color: {{block.settings.searchcolor}};
  }
{%endstyle%}




